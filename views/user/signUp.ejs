<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="shortcut icon" href="./images/icons/favis.png">
  <link rel="stylesheet" href="./css/login_sign_up.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  

 
</head>
<body>
  <div class="container">
   
    <div class="signup-box">
        <h2>Sign Up</h2>
        <form id="registrationForm" action="/signUp" method="post">
          
            <div class="input-box">
                <label for="name">Name</label>
                <input type="text" id="name-field" placeholder="Enter your name" name="name" onkeyup="validateName()">
                <span id="name-error" class="error-message" ></span><br>
            </div>
            <div class="input-box">
                <label for="email">Email</label>
                <input type="email" id="email-field" placeholder="Enter your email" name="email" onkeyup="validateEmail()">
                <span id="email-error" class="error-message" ></span><br>
            </div>
            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" id="password-field" placeholder="Enter your password" name="password"onkeyup="validatePassword()">
                <span id="password-error" class="error-message" ></span><br>
            </div>
            <div class="input-box">
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password-field" placeholder="Confirm your password" name="conform-form" onkeyup="validateConfirmPassword()">
                <span id="confirm-password-error" class="error-message" ></span><br>
            </div>
            <!-- Google Login Button -->
            <div class="google-login">
                <button type="button" class="btn google-btn">
                  <img src="images\icons\google.png" alt="Google Logo" class="google-icon">
                  Sign up with Google
                </button>
              </div>
              
            <button type="submit" class="signup-btn" onclick="return submitForm()" >Sign Up</button><!-- <span id="submit-error" class="error-message" ></span> -->
        <p class="signin-text">Already have an Account? <a href="/login">Sign In</a></p>
        </form>
    </div>
</div>

<div id="popupMessage" style="display: none">
  <%= typeof message !== 'undefined' ? message : '' %>
</div>

<script>
  const message = '<%= typeof message !== "undefined" ? message : "" %>';
  if (message.trim().length > 0) {
    const popup = document.getElementById("popupMessage");
    popup.style.display = "block"; // Show the pop-up
    setTimeout(() => {
      popup.style.display = "none"; // Hide the pop-up after 2 seconds
    }, 2000);
  }
</script>




  <script src="/js/formValid.js" ></script>
  <!-- <script src="/js/emailCheck.js"></script> -->
  
</body>
</html>
