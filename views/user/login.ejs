<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link rel="shortcut icon" href="/images/icons/favis.png">
  <link rel="stylesheet" href="/css/login_sign_up.css" />
</head>

<body>
  <!-- Pop-up box -->

  <div class="container">
    <div class="signup-box">
      <h2>Login</h2>
      <form action="/user/login" method="POST">
        <div class="input-box">
          <label for="email">Email</label>
          <input type="email" id="email-field" name="email" onkeyup="validateEmail()" />
          <span id="email-error" class="error-message"></span><br />
        </div>
        <div class="input-box">
          <label for="password">Password</label>
          <input type="password" id="password-field" name="password" onkeyup="validatePassword()" />
          <span id="password-error" class="error-message"></span>
          <p class="forgot-password">
            <a href="/user/forgot-password">Forgot Password?</a>
          </p>
        </div>
        <!-- Google Login Link -->
        <div class="google-login">
          <a href="/user/auth/google" class="btn google-btn">
            <img src="/images/icons/google.png" alt="Google Logo" class="google-icon">
            Sign up with Google
          </a>
        </div>

        <button type="submit" class="signup-btn" onclick=" return submitFormLogin()">
          Login
        </button>
        <!-- <span id="submit-error" class="error-message"></span> -->
      </form>
      <p class="signin-text">
        Don't have an Account? <a href="/user/signUp">Sign Up</a>
      </p>
    </div>
  </div>


  <div id="popupMessage" style="display: none">
    <%= typeof message !=='undefined' ? message : '' %>
  </div>

  <script>
    const message = '<%= typeof message !== "undefined" ? message : "" %>';
    if (message.trim().length > 0) {
      const popup = document.getElementById("popupMessage");
      popup.style.display = "block"; // Show the pop-up
      setTimeout(() => {
        popup.style.display = "none"; // Hide the pop-up after 2 seconds
      }, 2000);
    }
  </script>

  <script src="/js/formValid.js"></script>
</body>

</html>