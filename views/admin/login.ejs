<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <link rel="shortcut icon" href="/images/icons/admin-favis.png">
    <link rel="stylesheet" href="/css/login_sign_up.css"/>
  </head>
  <body>
    
    <!-- Admin Login Container -->
    <div class="container">
      <div class="signup-box">
        <h2>Admin Login</h2>
        <form action="/admin/login" method="POST">
          <div class="input-box">
            <label for="email">Admin Email</label>
            <input
              type="email"
              id="email-field"
              name="email"
              onkeyup="validateEmail()"
              placeholder="Enter your admin email"
            />
            <span id="email-error" class="error-message"></span><br />
          </div>
          <div class="input-box">
            <label for="password">Admin Password</label>
            <input
              type="password"
              id="password-field"
              name="password"
              onkeyup="validatePassword()"
              placeholder="Enter your admin password"
            />
            <span id="password-error" class="error-message"></span>
          </div>
          <button
            type="submit"
            class="signup-btn"
            onclick="return submitFormLogin()"
          >
            Login
          </button>
        </form>
      </div>
    </div>

    <!-- Admin Popup Message -->
    <div id="popupMessage" style="display: none">
      <%= typeof message !== 'undefined' ? message : '' %>
    </div>

    <script>
      const message = '<%= typeof message !== "undefined" ? message : "" %>';
      if (message.trim().length > 0) {
        const popup = document.getElementById("popupMessage");
        popup.style.display = "block"; // Show the pop-up
        setTimeout(() => {
          popup.style.display = "none"; // Hide the pop-up after 2 seconds
        }, 2000);
      }
    </script>

    <script src="/js/formValid.js"></script>
  </body>
</html>
